#!/bin/bash
# shellcheck disable=1090

function dot_reset() {
  source "${HOME}/.bashrc"
}

function go() {
  declare -A dir_list
  while IFS="=" read -r key value; do
    dir_list[$key]=$value
  done < "${HOME}/.dir_list"

  if [ "$#" -eq 0 ]; then
    cat "${HOME}/.dir_list"
  elif [ "$#" -eq 1 ]; then
    if [[ -v dir_list[$1] ]]; then
      cd "${dir_list[$1]}"
    fi
  else
    if [ -z "$2" ]; then
      unset "dir_list[$1]"
    else
      dir_list[$1]=$2
    fi
    for key in "${!dir_list[@]}"; do
      echo "${key}=${dir_list[$key]}"
    done > "${HOME}/.dir_list"
  fi
}

function set_title() {
  if [ -z "$PS1_BACK" ]; then
    PS1_BACK="$PS1"
  fi
  TITLE="\[\e]0;$*\a\]"
  PS1="${PS1_BACK}${TITLE}"
}

function cdl() {
  cd "${1}" && ll "${PWD}" 
}

function mkcd() {
  mkdir -p -- "$1" && cd -P -- "$1" || exit
}

function clone_all() {
  repo_list="${HOME}/code/repo-list"
  while read -r repo; do 
    echo "${repo}"
  done < "${repo_list}"
}

function pull_all() {
  for repo in */.git; do 
    echo "${repo}"
    cd "${repo}/.." || return
    git pull --ff-only
    cd ..
  done
}

function dot_pull() {
  set -e
  cd "${HOME}/.dot"
  git pull --ff-only
  source "${HOME}/.bashrc"
}

function apt_update() {
  if sudo apt update && sudo apt full-upgrade -y && sudo apt autoremove -y; then
    if [ -f /var/run/reboot-required ]; then
      echo -e "\e[33m*** Reboot Required ***\e[0m"
    else
      echo -e "\e[34m*** System Updated ***\e[0m"
    fi
  else
    echo -e "\e[31m*** System Update Failed ***\e[0m"
  fi
}

function git_branch() { 
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/[\1] /'
}
