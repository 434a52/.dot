#!/bin/bash

function mkcd() {
  mkdir -p -- "$1" && cd -P -- "$1"
}

function apt_update() {
  if [[ sudo apt update && sudo apt full-upgrade -y ]]; then
    sudo apt autoremove -y
    if [ -f /var/run/reboot-required ]; then
      echo "*** Reboot Required ***"
    else
      echo "*** System Updated ***"
    fi
  fi
}
